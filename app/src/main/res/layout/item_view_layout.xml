<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp
"
    >


    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/list_imageview"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/list_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/list_imageview"
        android:textColor="@color/black"
        tools:text="Category" />
    <TextView
        android:id="@+id/list_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/list_imageview"
        android:layout_below="@id/list_category"
        android:textColor="@color/black"
        tools:text="Address" />
    <TextView
        android:id="@+id/list_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/list_imageview"
        android:layout_below="@id/list_address"
        android:textColor="@color/black"
        tools:text="Phone" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/list_phonenumber"
        android:background="#656CEE"

        />


</RelativeLayout>